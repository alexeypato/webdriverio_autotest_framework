{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["./*"],
            "src/*": ["./src/*"]
        },
        "typeRoots": ["./types"],
        "types": ["node", "@wdio/sync", "chai", "@wdio/cucumber-framework"],
        "target": "es5",
        "lib": ["es2018"],
        "experimentalDecorators": true
    },
    "include": ["./src/**/*.ts", "./config/**/*.ts"],
    "exclude": ["./node_modules"],
    "compileOnSave": false
}
